<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/fr_cd_n1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusRight="@+id/fr_cd_n2"
            android:nextFocusLeft="@+id/fr_cd_n1"
            android:textSize="24sp"
            android:imeOptions="actionNext" />

        <EditText
            android:id="@+id/fr_cd_n2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:nextFocusRight="@+id/fr_cd_n3"
            android:nextFocusLeft="@+id/fr_cd_n1"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/fr_cd_n3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:nextFocusRight="@+id/fr_cd_n4"
            android:nextFocusLeft="@+id/fr_cd_n2"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/fr_cd_n4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:nextFocusRight="@+id/fr_cd_n5"
            android:nextFocusLeft="@+id/fr_cd_n3"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/fr_cd_n5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:imeOptions="actionDone"
            android:nextFocusLeft="@+id/fr_cd_n4"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/fr_cd_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"></ProgressBar>

    <Button
        android:id="@+id/fr_cd_confirm"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="250dp"
        android:background="@android:color/holo_blue_light"
        android:text="Confirm code"
        android:textColor="@android:color/white"
        />
</LinearLayout>