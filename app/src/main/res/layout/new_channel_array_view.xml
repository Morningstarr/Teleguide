<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/channels_arr_card_view"
    android:layout_height="60dp"
    android:layout_width="match_parent"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp"
    android:elevation="0dp"
    app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/channels_arr_item_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_7"
                android:visibility="visible"
                android:layout_weight="0.97">

                <androidx.cardview.widget.CardView
                    android:id="@+id/channel_arr_placeholder_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5">

                    <TextView
                        android:id="@+id/channel_arr_placeholder"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="#CDF5FE"
                        android:gravity="center"
                        android:text="K"
                        android:textSize="12sp" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/channel_arr_channel_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|start"
                    android:lineSpacingExtra="3sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingStart="15dp"
                    android:text="Уральские парни"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/channel_arr_placeholder_card"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/channel_arr_check_layout"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_weight="0.03"
                android:background="#FFFFFF"
                android:gravity="end"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/channel_arr_check_channel"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"

                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_check"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


</androidx.cardview.widget.CardView>


