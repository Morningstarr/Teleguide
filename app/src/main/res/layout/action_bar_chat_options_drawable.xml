<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"

    android:background="#FFFFFF"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/actionBar_chat_button_cancel"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:src="@drawable/ic_cross" />

    <TextView
        android:id="@+id/actionBar_chats_count"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="#03CCFC"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/actionBar_folder_name"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:text="Уральские парни"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:textSize="20sp"
        android:textColor="#1A1A1A"
        android:textStyle="bold"
/>

    <ImageButton
        android:id="@+id/actionBar_chat_button_move"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#FFFFFF"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:src="@drawable/ic_move" />

    <ImageButton
        android:id="@+id/actionBar_chat_button_delete"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#FFFFFF"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:src="@drawable/ic_delete" />


</LinearLayout>

